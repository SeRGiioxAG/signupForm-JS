<div class="card__container">
	<div class="card">
		{{#if account}}
		<form action="/profile/edit" method="post">
			<h1 class="card__title">Choose an item to change it's value permanently</h1>
			<div class="card__paragraph--wrapper">

				<p class="card__paragraph">This is your account email:</p><span class="card__data card__data--email">{{account.email}}</span>
				<p class="card__paragraph">This is your actual fullname:</p><span class="card__data card__data--fullname">{{account.fullname}}</span>
				<div class="input form__input--container form__input--fullnameContainer">

					<input class="form__input" id="inputFullname" type="text" name="fullnameInput" placeholder="First Name AND Surname" maxlength="50">
					<span class="clearContainer">
						<i class="fas fa-times" id="clear" onclick="clearButton();"></i>
					</span>
				</div>
				<div class="input form__input--container form__input--passwordContainer">

					<input class="form__input" id="inputCurrentPassword" type="password" name="passwordInput" placeholder="Current password" maxlength="30">
						<span class="eyeContainer">
							<i class="far fa-eye" id="eye-show" onclick="eyeButton();"></i><i class="far fa-eye-slash" id="eye-hide" onclick="eyeButton();"></i>
						</span>
					<br>
					<input class="form__input" id="inputNewPassword" type="password" name="passwordInput" placeholder="New password" maxlength="30">

				</div>
				<div class="form__validation--wrapper">

				<p class="form__validation--first">At least 8 characters in the password field.</p>
				<p class="form__validation--second">Include at least 1 number.</p>
				<p class="form__validation--third">At least use 1 capital letter and 1 lower case letter.</p>
				<p class="form__validation--fourth">Include at least 1 symbol (ex: # ? ! @ $ â‚¬ % & * - + . , ).</p>
				<p class="form__validation--fifth">Match both password inputs.</p>		
				
				</div>
				<p class="card__paragraph">You created your profile:</p><span class="card__data">{{account.creationDate}}</span>
			</div>
			<div class="button form__submitButton--container">

				<!--TODO: MAKE THIS BUTTONS FUNCTIONAL WITH SQL AND JS.-->
				<button class="form__submitButton--left" type="button" onclick="showData();">Show inputs</button>
				<button class="form__submitButton--middle" type="button" onclick="submitData();">Change profile information</button>
				<button class="form__submitButton--right" type="button" onclick="window.location.href='/profile'">Go back to your profile</button>

			</div>
			<div class="card__note--wrapper">

				<p class="card__note">We can't show you your actual password due to security measures.</p>

			</div>
		</form>
		<script src="./../public/js/editProfile.js"></script>
		{{else}}
		<h1 class="card__title">Something went wrong. Please, log out and log in again to access this page.</h1>
		{{/if}}
	</div>
</div>